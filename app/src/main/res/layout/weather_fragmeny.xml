<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:background="@color/colorPrimary"
    android:id="@+id/main_content222"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/weather_na"
            android:id="@+id/imageView_weather" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/temperature"
                android:textColor="@color/white"
                android:gravity="bottom"
                android:textSize="90dp"
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/weather"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:gravity="bottom"
                android:textSize="30dp"
                android:text="---"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>




    </LinearLayout>





        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/date_one"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:textSize="30dp"
                        android:text="-----"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="30dp"
                                android:gravity="center"
                                android:text="早: "
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/one_day"
                                android:src="@drawable/weather_na"
                                android:layout_gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />

                            <TextView
                                android:id="@+id/one_day_temp"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginLeft="20dp"
                                android:textSize="40dp"
                                android:gravity="center"
                                android:text="--°C"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />




                        </LinearLayout>


                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="30dp"
                                android:gravity="center"
                                android:text="晚: "
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/one_night"
                                android:src="@drawable/weather_na"
                                android:layout_gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:id="@+id/one_night_tem"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginLeft="20dp"
                                android:textSize="40dp"
                                android:gravity="center"
                                android:text="--°C"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />




                        </LinearLayout>




                    </LinearLayout>






                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

